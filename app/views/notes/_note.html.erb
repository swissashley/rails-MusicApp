<h2>Add Note:</h2>
<form action="<%= track_notes_url(@track) %>" method="post">
  <%= auth_token %>
  <input type="hidden" name="_method" value="post">
  <input type="hidden" name="note[track_id]" value="<%= @track.id %>">
  <textarea name="note[note_text]" rows="8" cols="40"></textarea>
  <input type="submit" name="update" value="Append Note">
</form>
